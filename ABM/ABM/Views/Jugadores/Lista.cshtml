@model IEnumerable<ABM.Datos.Jugador>

@{
    ViewBag.Title = "Lista";
}

<h2>Lista</h2>

<p>
    @Html.ActionLink("Nuevo", "Agregar")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edad)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.ActionLink("Editar", "Modificar", new { id = item.idJugador })
            </td>
            <td>
                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.idJugador })

            </td>
        </tr>
    }

</table>

